<section class="tasteful-recepies between margin-top">
    <div class="containers">
        <div class="global-headline">
            <div class="animate-top">
                <h2 class="sub-heading">
                    <span class="first-letter">W</span>elcome
                </h2>
            </div>
            <div class="animate-bottom">
                <h2 class="headline headline-dark"> Our Story</h2>
            </div>
        </div>
    </div>
</section>
<h1>Shops#index</h1>
<p>Find me in app/views/shops/index.html.erb</p>
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.title %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= image_tag(product.image.url) %></td>
            <td><%= link_to 'Show', shop_path(product) %></td>
            <td>
                <%= form_for @order_item, remote: true do |f| %>
                <%= f.hidden_field :product_id, :value => product.id %>
                <%= f.number_field :quantity, value: 1, min: 1 %>
                <%= f.submit "Add To Cart" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<br>
<div id="cart">
    <%= render 'cart/cart' %>
</div>