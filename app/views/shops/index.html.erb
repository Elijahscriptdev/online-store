<section class="hero-shop-index" id="hero">
    <div class="containers">
        <h5 class="sub-heading mt-5" style="font-size: 2rem;">
            SHOP
        </h5>
    </div>
</section>
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.title %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Show', shop_path(product) %></td>
            <td>
                <%= form_for @order_item, remote: true do |f| %>
                <%= f.hidden_field :product_id, :value => product.id %>
                <%= f.number_field :quantity, value: 1, min: 1 %>
                <%= f.submit "Add To Cart" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<br>
<div id="cart">
    <%= render 'cart/cart' %>
</div>
