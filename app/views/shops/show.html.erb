<section class="hero-shop-index" id="hero">
    <div class="containers">
        <h5 class="sub-heading mt-5" style="font-size: 2rem;">
            SHOP/PRODUCT
        </h5>
    </div>
</section>
<p id="notice"><%= notice %></p>

<p class="text-center my-5">
    <strong>Title:</strong>
    <%= @product.title %>
</p>

<div class="col-lg-6 col-sm-12">
    <%= image_tag(@product.image.url) %>
</div>

<p class="p-3">
    <strong>Description:</strong>
    <%= @product.description %>
</p>

<p class="p-3">
    <strong>Price:</strong>
    <%= @product.price %>
</p>

<%= link_to 'Back', root_path, class:"btn my-5 text-center ml-3" %>